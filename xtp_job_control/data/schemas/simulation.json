{
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Input to run a given workflow",
    "type": "object",
    "properties": {
	"workflow": {
	    "type": "string",
	    "defaulft": "simulation",
	    "description": "Name of the workflow to run"
	},
	"path_votcashare": {
	    "type": "string",
	    "description": "path to the VOTCASHARE folder"
	},
	"system": {
	    "type": "string",
            "description": "path to the system description file in xml"
	},
	"topology": {
	    "type": "string",
	    "description": "path to topology file"
	},
	"trajectory": {
	    "type": "string",
	    "description": "path to the trajectory file"
	},
	"mp_files": {
	    "type": "string",
	    "description": "path to the folder containing the mp_files"
	},
	"xqmultipole_jobs": {
	    "type": ["array", "null"],
	    "description": "jobs Only this set of Jobs",
	    "default": null
	},
	"changeoptions": {
	    "type": "object",
	    "description": "options to change from default templates",
	    "eqm": {
	    	"type": "object"
	    },
	    "esp2multipole": {
	    	"type": "object"
	    },
	    "iqm": {
	    	"type": "object"
	    },
	    "jobwriter": {
	    	"type": "object"
	    },
	    "jobwriter_qmmm": {
	    	"type": "object"
	    },
	    "mbgft": {
	    	"type": "object"
	    },	    
	    "mbgft_pair": {
	    	"type": "object"
	    },	    
	    "mbgft_qmmm": {
	    	"type": "object"
	    },	    
	    "neighborlist": {
		"type": "object"
	    },
	    "qmmm": {
	    	"type": "object"
	    },
	    "xqmultipole": {
		"type": "object"
	    },
	    "xtpdft": {
		"type": "object"
	    },
	    "xtpdft_pair": {
		"type": "object"
	    },
	    "xtpdft_qmmm": {
		"type": "object"
	    }	    

	}
    },
    "required": [
	"path_votcashare",
	"system",
	"topology",
	"trajectory",
	"mp_files",
	"changeoptions"
  ]
}
